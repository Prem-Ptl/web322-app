<h2>Categories</h2>

{{#if items}} 
    {{!-- If items are passed, show filtered items --}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Post Date</th>
                <th>Published</th>
            </tr>
        </thead>
        <tbody>
            {{#each items}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{formatDate this.postDate}}</td>
                <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/categories" class="btn btn-secondary">Back to Categories</a>

{{else}} 
    {{!-- Otherwise, show all categories --}}
    {{#if categories.length}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>View Items</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.category}}</td>
                <td>
                    <a href="/categories?category={{this.id}}" class="btn btn-primary btn-sm">View Items</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>No categories found.</p>
    {{/if}}
{{/if}}
