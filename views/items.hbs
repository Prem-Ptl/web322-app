<h2>Items</h2>

{{#if items.length}}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Category</th>
            <th>Item Name</th>
            <th>Price</th>
            <th>Post Date</th>
            <th>Published</th>
        </tr>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td>{{this.id}}</td>  
            <td>{{this.category}}</td>
            <td>{{this.title}}</td>  
            <td>${{this.price}}</td>  
            <td>{{formatDate this.postDate}}</td>
            <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>No items found.</p>
{{/if}}
